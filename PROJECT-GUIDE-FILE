#setup backend:

# Update package list
sudo apt update

# Install pkg-config
sudo apt install pkg-config

# Ensure necessary development libraries are installed
sudo apt install libmysqlclient-dev python3-dev

# Reinstall mysqlclient in the virtual environment
source venv/bin/activate
pip install mysqlclient

# Run Flask Application:
python app.py
